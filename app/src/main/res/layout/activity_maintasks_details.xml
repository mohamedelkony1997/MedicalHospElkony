<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".manger.MaintasksDetails">


        <TextView
            android:id="@+id/tasks_details_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"
            android:fontFamily="@font/poppins_medium"
            android:gravity="center"
            android:text="@string/tasks_details"
            android:textColor="@color/black"
            android:textSize="@dimen/_15ssp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            />

        <TextView
            android:id="@+id/tasks_name_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:background="@drawable/round"
            android:fontFamily="@font/poppins_medium"

            android:gravity="left"
            android:padding="@dimen/_5sdp"

            android:text="@string/tasks_details"
            android:textSize="@dimen/_15ssp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tasks_details_text" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintask"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tasks_name_text">

            <androidx.cardview.widget.CardView
                android:id="@+id/Cardprofiletask_doctor_image"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:elevation="10dp"
                app:cardCornerRadius="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/profileytask_doctor_image"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/_5sdp"
                    android:background="@color/white"
                    android:scaleType="fitXY"

                    android:src="@drawable/mohamed" />


            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/texttask_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_8sdp"
                android:fontFamily="@font/poppins_semibold"
                android:text="Ibahim Khaled"
                android:textSize="@dimen/_13ssp"
                app:layout_constraintStart_toEndOf="@+id/Cardprofiletask_doctor_image"
                app:layout_constraintTop_toTopOf="@+id/constraintask" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_8sdp"
                android:text="Specialist - Manger"
                android:textColor="@color/hblue"
                app:layout_constraintStart_toEndOf="@+id/Cardprofiletask_doctor_image"

                app:layout_constraintTop_toBottomOf="@+id/texttask_name" />

            <TextView
                android:id="@+id/texttask_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_8sdp"
                android:text="13 Mar 2020"
                android:textColor="@color/gray"
                app:layout_constraintEnd_toEndOf="@+id/constraintask"

                app:layout_constraintTop_toTopOf="@+id/constraintask" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/texttask_subject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:fontFamily="@font/poppins_semibold"
            android:text="Details note : Lorem Ipsum is simply dummy text of
         printing and typesetting industry.Lorem Ipsum"
            android:textSize="@dimen/_10ssp"
            app:layout_constraintStart_toStartOf="@+id/constraintask"
            app:layout_constraintTop_toBottomOf="@+id/constraintask"


            />

        <androidx.cardview.widget.CardView
            android:id="@+id/Cardtask_image"
            android:layout_width="@dimen/_160sdp"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:elevation="10dp"
            app:cardCornerRadius="10dp"

            app:layout_constraintStart_toStartOf="@id/constraintask"
            app:layout_constraintTop_toBottomOf="@+id/texttask_subject">

            <ImageView
                android:id="@+id/Details_task_image"
                android:layout_width="@dimen/_140sdp"
                android:layout_height="@dimen/_120sdp"
                android:layout_gravity="center"
                android:background="@color/white"
                android:scaleType="fitXY"
                android:src="@drawable/mohamed"

                />


        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/texttask_todo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:fontFamily="@font/poppins_semibold"
            android:text="To do"
            android:textSize="@dimen/_13ssp"
            app:layout_constraintStart_toStartOf="@+id/constraintask"
            app:layout_constraintTop_toBottomOf="@+id/Cardtask_image"


            />


        <RadioGroup
            android:id="@+id/groupradio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@+id/constraintask"
            app:layout_constraintTop_toBottomOf="@+id/texttask_todo">

            <RadioButton
                android:id="@+id/radia_id1"
                android:layout_width="fill_parent"
                android:layout_height="33dp"
                android:text="Lorem Ipsum is simply dummy text of"
                android:textSize="@dimen/_12sdp" />

            <RadioButton
                android:id="@+id/radia_id2"
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:text="Lorem Ipsum is simply dummy text of"
                android:textSize="@dimen/_12sdp" />

            <RadioButton
                android:id="@+id/radia_id3"
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:text="Lorem Ipsum is simply dummy text of"
                android:textSize="@dimen/_12sdp" />

            <RadioButton
                android:id="@+id/radia_id4"
                android:layout_width="fill_parent"
                android:layout_height="26dp"
                android:text="Lorem Ipsum is simply dummy text of"
                android:textSize="@dimen/_12sdp" />

        </RadioGroup>

        <TextView
            android:id="@+id/reply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:drawableStart="@drawable/fi_rr_undo"
            android:drawablePadding="@dimen/_3sdp"
            android:fontFamily="@font/poppins_semibold"
            android:text="Reply -Doctor"
            android:textSize="@dimen/_10ssp"
            app:layout_constraintStart_toStartOf="@+id/constraintask"
            app:layout_constraintTop_toBottomOf="@+id/groupradio"


            />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintask2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"

            app:layout_constraintTop_toBottomOf="@+id/reply">

            <androidx.cardview.widget.CardView
                android:id="@+id/Cardprofiletask_manger_image"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:elevation="10dp"
                app:cardCornerRadius="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/profileytask_manger_image"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/_5sdp"
                    android:background="@color/white"
                    android:scaleType="fitXY"

                    android:src="@drawable/mohamed" />


            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/texttaskmanger_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_8sdp"
                android:fontFamily="@font/poppins_semibold"
                android:text="Ibahim Khaled"
                android:textSize="@dimen/_13ssp"
                app:layout_constraintStart_toEndOf="@+id/Cardprofiletask_manger_image"
                app:layout_constraintTop_toTopOf="@+id/constraintask2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_8sdp"
                android:text="Specialist - Manger"
                android:textColor="@color/hblue"
                app:layout_constraintStart_toEndOf="@+id/Cardprofiletask_manger_image"

                app:layout_constraintTop_toBottomOf="@+id/texttaskmanger_name" />

            <TextView
                android:id="@+id/texttaskmanger_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_8sdp"
                android:text="13 Mar 2020"
                android:textColor="@color/gray"
                app:layout_constraintEnd_toEndOf="@+id/constraintask2"

                app:layout_constraintTop_toTopOf="@+id/constraintask2" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/texttaskmanger_subject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:fontFamily="@font/poppins_semibold"
            android:text="Details note : Lorem Ipsum is simply dummy text of
         printing and typesetting industry.Lorem Ipsum"
            android:textSize="@dimen/_10ssp"
            app:layout_constraintStart_toStartOf="@+id/constraintask2"
            app:layout_constraintTop_toBottomOf="@+id/constraintask2"


            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_20sdp"

            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:backgroundTint="@color/hblue"
            android:fontFamily="@font/fonts"
            android:onClick="onfinishtask"
            android:text="Finish Task"
            android:textAllCaps="false"

            android:textColor="@color/white"
            android:textSize="@dimen/_13ssp"
            app:cornerRadius="@dimen/_5sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/constraintask"
            app:layout_constraintTop_toBottomOf="@+id/texttaskmanger_subject"

            />

</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>