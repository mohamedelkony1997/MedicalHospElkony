<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CallDone"
    android:background="@color/hwhite">

    <ImageView
        android:id="@+id/doneImage"
        android:layout_width="@dimen/_130sdp"
        android:layout_height="@dimen/_130sdp"
        android:layout_marginHorizontal="@dimen/_50sdp"
        android:src="@drawable/donemark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="@dimen/_120sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/doneImage"
        android:gravity="center"
        android:id="@+id/done_text"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="The request has been canceled successfully"
        android:textSize="@dimen/_15ssp"
        android:textColor="@color/hblue"
        android:fontFamily="@font/poppins_medium"
        android:layout_marginStart="@dimen/_50sdp"
        android:layout_marginEnd="@dimen/_50sdp"


        android:layout_marginTop="@dimen/_15sdp"
        />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/backtohome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_20sdp"

        android:layout_marginEnd="@dimen/_20sdp"
        android:backgroundTint="@color/hblue"
        android:fontFamily="@font/poppins_medium"
        android:text="@string/back_to_home"
        android:textAllCaps="false"
        app:cornerRadius="@dimen/_5sdp"
        android:textColor="@color/white"
        android:textSize="@dimen/_14ssp"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/_50sdp"

        android:onClick="backtothehome"/>
</androidx.constraintlayout.widget.ConstraintLayout>