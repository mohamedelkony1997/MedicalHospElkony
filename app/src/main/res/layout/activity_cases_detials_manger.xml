<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".manger.CasesDetialsMAnger">
    <TextView
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/docorcases_details_text"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Case Details"
        android:textSize="@dimen/_15ssp"
        android:textColor="@color/black"
        android:fontFamily="@font/poppins_medium"
        android:layout_marginTop="@dimen/_15sdp"
        android:gravity="center"
        />
    <LinearLayout
        android:id="@+id/lineardoctorscases"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/docorcases_details_text"
        android:layout_marginTop="@dimen/_5sdp"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        >

        <Button
            android:id="@+id/casebtn"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_3sdp"
  android:onClick="oncasefragment"
            android:text="Case"
            android:textAllCaps="false"
            android:textSize="@dimen/_10ssp" />

        <Button
            android:id="@+id/medicalbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Medical Record"
            android:textAllCaps="false"
            android:onClick="onmedicalrecord"
            android:layout_marginEnd="@dimen/_2sdp"
            android:textSize="@dimen/_10ssp"
            style="?attr/materialButtonOutlinedStyle"

            />
        <Button
            android:id="@+id/measurmentbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Medical measurment"
android:onClick="onmedicalmeasurment"
            android:textAllCaps="false"
            android:textSize="@dimen/_10ssp"
            style="?attr/materialButtonOutlinedStyle"
            android:gravity="center"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_weight="-.2"
            />

    </LinearLayout>
<FrameLayout
    android:id="@+id/framfragment"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/lineardoctorscases"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    />

</androidx.constraintlayout.widget.ConstraintLayout>