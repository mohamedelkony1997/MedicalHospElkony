<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constrainnotification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:padding="@dimen/_10sdp"
        >
        <androidx.cardview.widget.CardView
            android:id="@+id/Cardprofilenotification_doctor_image"
             app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            app:cardCornerRadius="8dp"
            android:elevation="10dp">
            <ImageView
                android:background="@color/white"
                android:scaleType="fitXY"
                android:id="@+id/profileynotification_doctor_image"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_margin="@dimen/_5sdp"
                android:layout_gravity="center"

                android:src="@drawable/mohamed"
                />


        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/textnotification_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/Cardprofilenotification_doctor_image"
            app:layout_constraintTop_toTopOf="@+id/constrainnotification"
            android:text="Ibahim Khaled"
            android:layout_marginStart="@dimen/_8sdp"
            android:textSize="@dimen/_13ssp"
            android:fontFamily="@font/poppins_semibold"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/Cardprofilenotification_doctor_image"
            app:layout_constraintTop_toBottomOf="@+id/textnotification_name"
            android:text="You have new task from manger"
            android:layout_marginStart="@dimen/_8sdp"

            android:textColor="@color/hblue"
            />

        <TextView
            android:id="@+id/textnotification_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2:30 am"
            android:textColor="@color/gray"
            android:textSize="@dimen/_5ssp"
            app:layout_constraintEnd_toEndOf="@+id/constrainnotification"
            app:layout_constraintTop_toTopOf="@+id/constrainnotification"
android:paddingEnd="@dimen/_3sdp"
            android:layout_marginEnd="@dimen/_10sdp"

            />
        <ImageView
            android:id="@+id/notify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/textnotification_time"
            app:layout_constraintTop_toTopOf="@+id/constrainnotification"

            android:src="@drawable/notify"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>